@model ProdutoModel
@{
    ViewData["Title"] = "Comprar produto";
}

<div class="text-center">
    <h1>Quantos(as) @Model.Nome você quer comprar ?</h1>
</div>

<form asp-controller="Produto" asp-action="ComprarProduto" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <select asp-for="Quantidade" class="form-control">
            @for (int c = 1; c <= Model.Quantidade; c++)
            {
                <option value="@c">@c</option>
            }
        </select>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Comprar</button>
        <a asp-controller="Produto" asp-action="Index" class="btn btn-secondary">Voltar</a>
    </div>
</form>