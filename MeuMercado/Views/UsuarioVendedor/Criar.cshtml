@model CriarProdutoModel
@{
    ViewData["Title"] = "Criar Novo Produto";
}

<div class="text-center">
    <h1>Criar Novo Produto</h1>
</div>

<form asp-controller="UsuarioVendedor" asp-action="CriarProduto" method="post">
    <div class="form-group">
        <label for="nome" class="form-label">Nome:</label>
        <input type="text" class="form-control" asp-for="Nome" id="nome" placeholder="Digite o nome do Produto..." />
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="form-group">
        <label for="categoria" class="form-label">Categoria:</label>
        <input type="text" class="form-control" asp-for="Categoria" id="categoria" placeholder="Digite a categoria do produto..." />
        @Html.ValidationMessageFor(x => x.Categoria)
    </div>

    <div class="form-group">
        <label for="quantidade" class="form-label">Quantidade:</label>
        <input type="number" class="form-control" asp-for="Quantidade" id="quantidade" placeholder="Digite a quantidade do produto..." />
        @Html.ValidationMessageFor(x => x.Quantidade)
    </div>

    <div class="form-group">
        <label for="valor" class="form-label">Valor:</label>
        <input type="number" step="0.01" min="0.01" class="form-control" asp-for="Valor" id="valor" placeholder="Digite o valor do produto..." />
        @Html.ValidationMessageFor(x => x.Valor)
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Criar</button>
        <a asp-controller="UsuarioVendedor" asp-action="MeusProdutos" class="btn btn-outline-dark">Voltar</a>
    </div>
</form>