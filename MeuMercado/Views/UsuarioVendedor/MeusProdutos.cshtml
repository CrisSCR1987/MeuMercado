@model List<ProdutoModel>
@{
    ViewData["Title"] = "Meus Produtos";
}

<a asp-controller="UsuarioVendedor" asp-action="Criar" class="btn btn-outline-dark">Criar Novo Produto</a>

<div class="text-center">
    <h1>Listagem de Produtos</h1>
</div>

@if (TempData["MensagemSucesso"] != null)
{
                    <div class="alert alert-success" role="alert">
        @TempData["MensagemSucesso"]
                    </div>
}
@if (TempData["MensagemErro"] != null)
{
                    <div class="alert alert-danger" role="alert">
        @TempData["MensagemErro"]
                    </div>
}

<table class="table" id="myTable">
  <thead>
    <tr>
      <th scope="col">Nome</th>
      <th scope="col">Categoria</th>
      <th scope="col">Quantidade</th>
      <th scope="col">Valor</th>
      <th scope="col">Editar</th>
      <th scope="col">Excluir</th>
    </tr>
  </thead>
  <tbody>
        @if (Model != null)
        {
            @foreach (ProdutoModel produto in Model)
            {
                                        <tr>
                                            <td>@produto.Nome</td>
                                            <td>@produto.Categoria</td>
                                            <td>@produto.Quantidade</td>
                                            <td>R$@produto.Valor</td>
                                            <td><a asp-controller="UsuarioVendedor" asp-action="Editar" asp-route-id="@produto.Id" class="btn btn-primary">Editar</a></td>
                                            <td><a asp-controller="UsuarioVendedor" asp-action="ExcluirConfirmacao" asp-route-id="@produto.Id" class="btn btn-danger">Excluir</a></td>
                                        </tr>
            }
        }
    </tbody>
</table>